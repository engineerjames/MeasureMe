<EditForm Model="@userInfo">

    <div class="form-group row">

        <label for="heightInInches" class="col-sm-2 col-form-label">Height in inches</label>
        <div class="col-sm-10">
            <InputNumber id="heightInInches" class="form-control" @bind-Value="userInfo.HeightInInches" />
        </div>
    </div>

    <div class="form-group row">
        <label for="weightInPounds" class="col-sm-2 col-form-label">Weight in pounds</label>
        <div class="col-sm-10">
            <InputNumber id="weightInPounds" class="form-control" @bind-Value="userInfo.WeightInPounds" />
        </div>
    </div>

    <div class="form-group row">
        <label for="age" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <InputNumber id="age" class="form-control" @bind-Value="userInfo.Age" />
        </div>
    </div>

    <h4>Basal Metabolic Rate: @userInfo.GetBasalMetabolicRate() kCal</h4>
    <h4>TDEE: @userInfo.GetTotalDailyEnergyExpenditure() kCal</h4>
</EditForm>

@using Models;
